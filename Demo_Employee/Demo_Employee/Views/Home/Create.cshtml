
@model Demo_Employee.Models.Employee
    @{ 
        ViewData["Title"] = "Create";
    }

<form asp-action="Create" class="form-horizontal">
    <div class="form-group">
        <lable class="control-label">Name</lable>
        <input asp-for="Emp_name" class="form-control" />
    </div>

    <div class="form-group">
        <lable class="control-label">City</lable>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <lable class="control-label">State</lable>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <lable class="control-label">Country</lable>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="form-group">
        <lable class="control-label">Department</lable>
        <input asp-for="Department" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>

